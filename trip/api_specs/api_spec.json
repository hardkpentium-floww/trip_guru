{
    "swagger": "2.0",
    "host": "localhost:8000",
    "basePath": "/api/trip/",
    "info": {
        "version": "1.0.0",
        "title": "Simple API",
        "description": "An Travel Booking API"
    },
    "schemes": [
        "https",
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "securityDefinitions": {
        "oauth": {
            "tokenUrl": "http://auth.ibtspl.com/oauth2/",
            "flow": "password",
            "scopes": {
                "read": "read users",
                "write": "create users",
                "update": "update users",
                "delete": "delete users",
                "superuser": "super user permission"
            },
            "type": "oauth2"
        }
    },
    "definitions": {
        "User": {
            "type": "object",
            "properties": {
                "phone_no": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "created_at": {
                    "type": "string",
                    "format": "date-time"
                },
                "updated_at": {
                    "type": "string",
                    "format": "date-time"
                }
            },
            "required": [
                "phone_no",
                "id",
                "name"
            ]
        }
    },
    "parameters": {
        "userParam": {
            "name": "user_param",
            "in": "body",
            "schema": {
                "type": "object",
                "properties": {
                    "phone_no": {
                        "type": "string"
                    }
                },
                "required": [
                    "phone_no"
                ]
            }
        }
    },
    "responses": {
        "InvalidUser": {
            "description": "Invalid User",
            "schema": {
                "type": "object",
                "properties": {
                    "status_code": {
                        "type": "integer"
                    },
                    "res_status": {
                        "type": "string",
                        "enum": [
                            "INVALID_USER"
                        ]
                    },
                    "response": {
                        "type": "string"
                    }
                },
                "required": [
                    "status_code",
                    "res_status",
                    "response"
                ]
            }
        }
    },
    "paths": {
        "/login/": {
            "post": {
                "operationId": "login",
                "summary": "Login for Person",
                "description": "Login api for person",
                "parameters": [
                    {
                        "$ref": "#/parameters/userParam"
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Login Success",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "status_code": {
                                    "type": "integer"
                                },
                                "res_status": {
                                    "type": "string"
                                },
                                "response": {
                                    "type": "object",
                                    "properties": {
                                        "access_token": {
                                            "type": "string"
                                        },
                                        "expires_in": {
                                            "type": "integer"
                                        },
                                        "token_type": {
                                            "type": "string"
                                        },
                                        "refresh_token": {
                                            "type": "string"
                                        },
                                        "scope": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "access_token",
                                        "expires_in",
                                        "token_type",
                                        "refresh_token",
                                        "scope"
                                    ]
                                }
                            },
                            "required": [
                                "status_code",
                                "res_status",
                                "response"
                            ]
                        }
                    },
                    "401": {
                        "$ref": "#/responses/InvalidUser"
                    }
                }
            }
        },
        "/logout/": {
            "post": {
                "operationId": "logout",
                "summary": "Logout for a Person",
                "description": "Logout API for a person",
                "parameters": [],
                "security": [
                    {
                        "oauth": [
                            "read"
                        ]
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Logout Success",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "status_code": {
                                    "type": "integer"
                                },
                                "res_status": {
                                    "type": "string"
                                },
                                "response": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "message"
                                    ]
                                }
                            },
                            "required": [
                                "status_code",
                                "res_status",
                                "response"
                            ]
                        }
                    }
                }
            }
        }
    }
}
